auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
  wait-delay 15
  hostname $(hostname)

auto wlan0
iface wlan0 inet static
  address 10.0.0.1
  netmask 255.255.255.0
  pre-up hostapd -B /etc/hostapd.conf
  post-up udhcpd
  pre-down killall -q udhcpd
  post-down killall -q hostapd
  wait-delay 15
